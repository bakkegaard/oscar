extends layout

block content
    div#nominations
        h1 Nominations
        div.panel.panel-default
            - each noms, cat in results
                div.panel-heading
                    b #{cat}
                div.panel-body
                    table.table.table-striped
                        thead
                            tr
                                - if(nom.kategori == 'Actor in a Leading Role' || nom.kategori == 'Actress in a Leading Role' || nom.kategori == 'Actor in a Supporting Role' || nom.kategori == 'Actress in a Supporting Role' || nom.kategori == 'Music Original Song' || nom.kategori == 'Directing')
                                    td(style='width: 50%')
                                        b Name
                                    td(style='width: 50%')
                                        b Movie
                        tbody
                            - each nom in noms
                                tr
                                    - if(nom.kategori == 'Actor in a Leading Role' || nom.kategori == 'Actress in a Leading Role' || nom.kategori == 'Actor in a Supporting Role' || nom.kategori == 'Actress in a Supporting Role' || nom.kategori == 'Music Original Song' || nom.kategori == 'Directing')
                                        td
                                            p #{nom.note}
                                        td
                                            p #{nom.filmnavn}
                                    - else
                                        td
                                            p #{nom.filmnavn}
                                        td
                                            p #{nom.note}


html
  head
    title= title
    link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
    script(src='/javascript/application.js')
  body
    div#header
        h1 Welcome to the oscars #{year}
        ul#tabs.nav.nav-tabs
          li(class=('standings' == path ? 'active' : ''),role='presentation')
            a(href="/") Standings
          li(class=('nominations' == path ? 'active' : ''), role='presentation')
            a(href="/nominations") Nomination
          li(class=('make_guess' == path ? 'active' : ''), role='presentation')
            a(href="/make_guess") Make guess
    block content